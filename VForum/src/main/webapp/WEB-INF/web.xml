<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>VForumWeb</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>VForum.jsp</welcome-file>
		
	</welcome-file-list>

	<servlet>
		<servlet-name>UserRegister</servlet-name>
		<servlet-class>com.vforum.controllers.UserRegisterController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserRegister</servlet-name>
		<url-pattern>/UserRegister</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UserLogin</servlet-name>
		<servlet-class>com.vforum.controllers.UserLoginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserLogin</servlet-name>
		<url-pattern>/UserLogin</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UserLogout</servlet-name>
		<servlet-class>com.vforum.controllers.UserLogoutController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserLogout</servlet-name>
		<url-pattern>/UserLogout</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UserHomePage</servlet-name>
		<servlet-class>com.vforum.controllers.UserHomePageController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserHomePage</servlet-name>
		<url-pattern>/UserHomePage</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>PostQuestion</servlet-name>
		<servlet-class>com.vforum.controllers.PostQuestionController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PostQuestion</servlet-name>
		<url-pattern>/PostQuestion</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>PostAnswer</servlet-name>
		<servlet-class>com.vforum.controllers.PostAnswerController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PostAnswer</servlet-name>
		<url-pattern>/PostAnswer</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DeletePost</servlet-name>
		<servlet-class>com.vforum.controllers.DeletePostController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeletePost</servlet-name>
		<url-pattern>/DeletePost</url-pattern>
	</servlet-mapping>

	<error-page>
		<error-code>400</error-code>
		<location>/WEB-INF/ErrorPage400.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>401</error-code>
		<location>/WEB-INF/ErrorPage401.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>403</error-code>
		<location>/WEB-INF/ErrorPage403.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INFs/ErrorPage404.jsp</location>
	</error-page>
	
	<error-page>
	
		<error-code>500</error-code>
		<location>/WEB-INF/ErrorPage500.jsp</location>
	</error-page>

	<!-- error-page> <error-code>404 </error-code> <location> </location> </error-page> -->
</web-app>